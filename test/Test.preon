
# Factoring computing
factorial : Int -> Int
factorial a =
  if a == 1 then 1 else a * factorial (a - 1)

# Prime testing
isPrimeHelper : Int -> Int -> Bool
isPrimeHelper num d =
  if num <= 1 then False
  else if d == 1 then True
  else if num % d == 0 then False
  else isPrimeHelper num (d - 1)

isPrime : Int -> Bool
isPrime num = isPrimeHelper num (num / 2)

(>> 5l) : Int -> Int -> Bool
(>>) num1 num2 = num1 == num2

# Entry point
main : String
main =
  "10! = " ++ factorial 10
  ++ "\n" ++
  "601 primality = " ++ isPrime 601
  ++ "\n"
